<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/holo_blue_light" />
            <corners 
                android:radius="5dp" />
            <stroke 
                android:color="@color/grey_80" 
                android:width="1.0dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/background_holo_light" />
            <corners 
                android:radius="5dp" />
            <stroke 
                android:color="@color/grey_80" 
                android:width="1.0dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>